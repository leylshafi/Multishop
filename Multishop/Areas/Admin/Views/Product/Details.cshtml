@model Product
@{
	var additionalPictures = Model.ProductImages.Where(pi => pi.IsPrimary == false).ToList();
}
<div class="m-5">
	<div class="container">
		<h1>@Model.Name</h1>
		<div>
			<img src="~/assets/img/@Model.ProductImages.FirstOrDefault(pi=>pi.IsPrimary==true).Url" class="card-img" class="card-img-top" alt="...">
		</div>
		@if (additionalPictures.Count() > 0)
		{
			<div class="d-flex flex-wrap">
				@foreach (ProductImage pi in additionalPictures)
				{
					<img src="~/assets/img/@pi.Url" class="card-img" class="card-img-top" alt="..." style="width:200px; margin:5px;">
				}
			</div>
		}
		<div class="d-flex">


			<div class="m-5">
				<p>Price: @Model.Price</p>
				<p>Category: @Model.Category.Name</p>
				<hr />
				<h2>Description</h2>
				<p>@Model.Description</p>
				<h2>Sizes</h2>
				@foreach (ProductSize ps in @Model.ProductSizes)
				{
					<p>@ps.Size.Name</p>
				}
				<h2>Colors</h2>
				@foreach (ProductColor pc in @Model.ProductColors)
				{
					<p>@pc.Color.Name</p>
				}
				
			</div>
		</div>

	</div>
</div>

