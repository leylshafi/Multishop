@model UpdateSlideVM
<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form class="forms-sample" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<img style="width:150px;height:150px;" src="~/assets/img/@Model.ImageUrl" />
						</div>
						<div class="form-group">
							<label asp-for="Photo">Photo</label>
							<input asp-for="Photo" class="form-control" id="Photo" placeholder="Photo">
							<span class="text-danger" asp-validation-for="Photo"></span>
						</div>
						<div class="form-group">
							<label asp-for="Title">Title</label>
							<input asp-for="Title" class="form-control" id="Title" placeholder="Title">
							<span class="text-danger" asp-validation-for="Title"></span>
						</div>
						<div class="form-group">
							<label asp-for="Order">Order</label>
							<input asp-for="Order" class="form-control" id="Order" placeholder="Order">
							<span class="text-danger" asp-validation-for="Order"></span>
						</div>
						<div class="form-group">
							<label asp-for="Description">Description</label>
							<input asp-for="Description" class="form-control" id="name" placeholder="Description">
							<span class="text-danger" asp-validation-for="Description"></span>
						</div>
						<div class="form-group">
							<label asp-for="ButtonTitle">Button title</label>
							<input asp-for="ButtonTitle" class="form-control" id="name" placeholder="Button title">
							<span class="text-danger" asp-validation-for="ButtonTitle"></span>
						</div>
						<div class="form-group">
							<div class="form-check form-switch">
								<input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch">
								<label class="form-check-label ml-3" asp-for="IsActive">Active</label>
							</div>
						</div>
						<button type="submit" class="btn btn-primary me-2">Submit</button>
						<a asp-action="Index" class="btn btn-light">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
