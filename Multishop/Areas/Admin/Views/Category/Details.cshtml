@model Category
<div class="container">
	<div class="d-flex flex-row justify-content-center">
		<div>
			<img src="~/assets/img/@Model.ImageUrl" class="card-img" class="card-img-top" alt="...">
		</div>

		<div class="m-5">
			<h1>@Model.Name</h1>
		</div>
		
	</div>
	<div class="d-flex flex-wrap">
			@if (Model.Products is not null)
			{
				foreach (Product p in Model.Products)
				{
					<div class="card m-1" style="width: 18rem;">
						<img src="~/assets/img/@p.ProductImages.FirstOrDefault(p=>p.IsPrimary==true).Url" class="card-img-top" alt="...">
						<div class="card-body">
							<h5 class="card-title">@p.Name</h5>
							<p class="card-text">@p.Description</p>
						</div>
					</div>
				}
			}
		</div>
</div>